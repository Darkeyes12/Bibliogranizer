<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout_organizacion_librerias"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#FF0000"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_organizacion_librerias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <ImageView
                android:id="@+id/book_imageView_organizacion_librerias"
                android:layout_width="110dp"
                android:layout_height="119dp"
                android:layout_marginTop="28dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/repisa"
                tools:layout_editor_absoluteX="134dp" />


            <TextView
                android:id="@+id/book_title_organizacion_librerias"
                android:layout_width="147dp"
                android:layout_height="38dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Nombre Libreria"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/book_imageView_organizacion_librerias"
                app:layout_constraintTop_toTopOf="@+id/book_imageView_organizacion_librerias" />


            <TextView
                android:id="@+id/book_id_organizacion_librerias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/identificador_organizacion_librerias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/book_id_organizacion_librerias"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton_delete_organizacion_librerias"
                android:layout_width="90dp"
                android:layout_height="69dp"
                android:layout_marginBottom="28dp"
                android:background="@android:color/transparent"
                android:backgroundTint="#FF0000"
                android:contentDescription="Eliminar librerÃ­a"
                android:padding="16dp"
                android:scaleType="fitCenter"
                app:tint="#FF0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@android:drawable/ic_menu_delete" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/book_imageView_organizacion_librerias"
                tools:layout_editor_absoluteX="12dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>